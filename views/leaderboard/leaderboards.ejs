<!DOCTYPE html>
<html>
  <head>
    <title>Express Brains</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- this is a link to the css file -->
    <link rel="stylesheet" href="/style.css" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <!-- remember to include custom fonts - if you are using them -->
    <link href="https://fonts.googleapis.com/css2?family=Zilla+Slab:wght@700&display=swap" rel="stylesheet">

  </head>
  <body class="container">
    <%- include('../_header') %>

    <div class="container">
      <h1>Les √©quipes</h1>
      <table class="table">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nom</th>
          <th scope="col">Tentatives</th>
          <th scope="col">Temps</th>
          <th scope="col">Nombres √† trouver</th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <% leaderboards.forEach((leaderboard) => { %>
          <tr>
            <th scope="row"><%= leaderboard._id %></th>
            <td>
              <% if (leaderboard.user === null) {%>
                <span><p>Anonyme</p></span>
              <%} else {%>
                <span><%=leaderboard.user?.nickName%></span>
              <%}%>
            </td>
            <td><%=leaderboard.attempt%></td>
            <td>
              <%= leaderboard.endTime !== null ? Math.floor((leaderboard.endTime - leaderboard.startTime) / 1000) : 0 %> secondes
            </td>
            <td><%=leaderboard.numberToFind%></td>
            <td>
              <%if (leaderboard.numberToFind === '?') {%>
                <p>üïê</p>
              <%}%>
            </td>
          </tr>
        <% }); %>
        </tbody>
      </table>
    </div>

    <%- include('../_footer') %>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>