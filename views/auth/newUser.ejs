<!DOCTYPE html>
<html>
  <head>
    <title>Express Brains</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- this is a link to the css file -->
    <link rel="stylesheet" href="/style.css" />

    <!-- remember to include custom fonts - if you are using them -->
    <link href="https://fonts.googleapis.com/css2?family=Zilla+Slab:wght@700&display=swap" rel="stylesheet">
  </head>
  <body class="container">
    <%- include('../_header') %>

    <div class="col-sm-6 align-content-center align-items-center">
      <h5 class="modal-title">Inscription</h5>
      <form action="/users/new" method="post">
        <label for="email" class="form-label align-content-center">Email</label>
        <input type="email" class="form-control my-2" name="email">

        <label for="nickName" class="form-label align-content-center">Pseudo</label>
        <input type="text" class="form-control my-2" name="nickName">

        <label for="password" class="form-label align-content-center">Mot de passe</label>
        <input type="password" class="form-control my-2" name="password">

        <label for="confirmPassword" class="form-label align-content-center">Confirmer mot de passe</label>
        <input type="password" class="form-control my-2" name="confirmPassword">

        <button type="submit" class="btn btn-secondary align-content-center">S'inscrire</button>
      </form>
    </div>

    <%if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <div class="card-footer my-2 alert alert-danger">
      <%= errors[0].msg %>
    </div>
    <%}%>

    <%- include('../_footer') %>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>